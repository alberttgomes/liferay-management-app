<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds"  mvcc-enabled="true" package-path="com.management.app">

	<author>Albert Cabral</author>

	<namespace>Management</namespace>

	<!--  Employee Entity	-->
	<entity local-service="true" name="Employee" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="employeeId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="firstName" type="String" />
		<column name="lastName" type="String" />
		<column name="managerIdPK" type="long" />
		<column name="position" type="String" />
		<column name="stateCode" type="String" />
		<column name="status" type="int" />
		<column name="companyTime" type="long" />

		<!-- Order -->

		<order by="asc">
			<order-column name="firstName" />
			<order-column name="lastName" />
		</order>

		<!-- Finder methods -->

		<finder name="employee" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="employeeId" return-type="Manager">
			<finder-column name="employeeId" />
			<finder-column name="companyId" />
		</finder>
		<finder name="C_E_S" return-type="Collection">
			<finder-column comparator="!=" name="status" />
		</finder>
		<finder name="F_L_C" return-type="Collection">
			<finder-column name="firstName" />
			<finder-column name="lastName" />
			<finder-column name="companyId" />
		</finder>

	</entity>

	<!--  Manager Entity   -->
	<entity local-service="true" name="Manager" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="managerId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="firstName" type="String" />
		<column name="lastName" type="String" />
		<column name="employeeIdPK" type="long" />
		<column name="position" type="String" />
		<column name="stateCode" type="String" />
		<column name="status" type="int" />
		<column name="companyTime" type="int" />

		<!-- Order -->

		<order by="asc">
			<order-column name="firstName" />
			<order-column name="lastName" />
		</order>

		<!-- Finder methods -->

		<finder name="manager" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="managerId" return-type="Manager">
			<finder-column name="managerId" />
			<finder-column name="companyId" />
		</finder>
		<finder name="E_M_C" return-type="java.util.List&lt;Employee">
			<finder-column name="managerId" />
			<finder-column name="companyId" />
		</finder>
		<finder name="F_L_C" return-type="Manager">
			<finder-column name="firstName" />
			<finder-column name="lastName" />
			<finder-column name="companyId" />
		</finder>

	</entity>

	<exceptions>
		<exception>Employee</exception>
		<exception>Manager</exception>
	</exceptions>

</service-builder>